# Memory Backend Configuration Example
# Copy this file to .env and update with your values

# Environment
MEMORY_BACKEND_ENVIRONMENT=development
MEMORY_BACKEND_BUILD_TARGET=local

# GCP Configuration (required for cloud deployments)
MEMORY_BACKEND_GCP_PROJECT_ID=your-project-id

# HTTP Server
MEMORY_BACKEND_HTTP_PORT=8080

# Database Configuration
MEMORY_BACKEND_DB_DRIVER=sqlite
MEMORY_BACKEND_SQLITE_PATH=~/.synapse-memory/memory.db

# Spanner Configuration (if using Spanner)
MEMORY_BACKEND_SPANNER_INSTANCE_ID=your-instance
MEMORY_BACKEND_SPANNER_DATABASE_ID=memories
MEMORY_BACKEND_SPANNER_EMULATOR_HOST=localhost:9010

# Embedding Configuration
MEMORY_BACKEND_EMBED_PROVIDER=ollama
MEMORY_BACKEND_EMBED_MODEL=mxbai-embed-large

# Search Configuration
MEMORY_BACKEND_SEARCH_ALPHA=0.6
MEMORY_BACKEND_WEAVIATE_URL=localhost:8082

# Security Configuration (for future use)
# MEMORY_BACKEND_JWT_SECRET=your-secret-key
# MEMORY_BACKEND_API_KEY=demo-api-key

# Testing Configuration
MEMORY_BACKEND_TESTING_USE_EMULATOR=true
MEMORY_BACKEND_TESTING_TEMP_DATABASE=true
MEMORY_BACKEND_TESTING_PARALLEL=true
