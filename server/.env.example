# Mycelian Memory Backend Configuration Example
# Copy this file to .env and update with your values

# Environment
MEMORY_BACKEND_ENVIRONMENT=development
MEMORY_BACKEND_BUILD_TARGET=local

# HTTP Server
MEMORY_BACKEND_HTTP_PORT=8080

# Database Configuration (Postgres Only)
MEMORY_BACKEND_DB_DRIVER=postgres
MEMORY_BACKEND_POSTGRES_HOST=localhost
MEMORY_BACKEND_POSTGRES_PORT=5432
MEMORY_BACKEND_POSTGRES_USER=mycelian_user
MEMORY_BACKEND_POSTGRES_PASSWORD=mycelian_password
MEMORY_BACKEND_POSTGRES_DATABASE=mycelian_memory
MEMORY_BACKEND_POSTGRES_SSLMODE=disable

# Embedding Configuration
MEMORY_BACKEND_EMBED_PROVIDER=ollama
MEMORY_BACKEND_EMBED_MODEL=mxbai-embed-large

# Search Configuration
MEMORY_BACKEND_SEARCH_ALPHA=0.6
MEMORY_BACKEND_WEAVIATE_URL=http://localhost:8082

# AWS Configuration (for production deployment)
# AWS_REGION=us-east-1
# MEMORY_BACKEND_AURORA_ENDPOINT=your-aurora-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com

# Security Configuration (for future use)
# MEMORY_BACKEND_JWT_SECRET=your-secret-key
# MEMORY_BACKEND_API_KEY=demo-api-key

# Testing Configuration
MEMORY_BACKEND_TESTING_USE_EMULATOR=false
MEMORY_BACKEND_TESTING_TEMP_DATABASE=true
MEMORY_BACKEND_TESTING_PARALLEL=true

# Logging Configuration
MEMORY_BACKEND_LOG_LEVEL=debug
